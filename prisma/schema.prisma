generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role { 
  USER
  ADMIN 
}
enum VenueType { 
  BILLIARD 
  MINI_SOCCER 
  CAFE 
}
enum TableStatus { 
  AVAILABLE 
  BOOKED 
  MAINTENANCE 
}
enum BookingStatus { 
  PENDING 
  PAID 
  CANCELLED 
  COMPLETED 
}
enum PaymentStatus { 
  PENDING 
  SUCCESS 
  FAILED 
  EXPIRED 
}

model User {
  id             String            @id @default(uuid())
  name           String
  email          String            @unique
  password       String
  role           Role              @default(USER)
  reservations   Booking[]
  locations      LocationTracking[]
  notifications  Notification[]
  createdAt      DateTime          @default(now())
}

model Venue {
  id          String    @id @default(uuid())
  name        String
  type        VenueType
  address     String
  latitude    Float?
  longitude   Float?
  floors      Floor[]
  tables      Table[]
  menus       Menu[]
  bookings    Booking[]
  createdAt   DateTime  @default(now())
}

model Floor {
  id        String   @id @default(uuid())
  number    Int
  venueId   String
  venue     Venue    @relation(fields: [venueId], references: [id])
  tables    Table[]
}

model Table {
  id          String      @id @default(uuid())
  tableNumber Int
  floorId     String?
  venueId     String
  status      TableStatus  @default(AVAILABLE)
  bookings    Booking[]
  createdAt   DateTime    @default(now())

  floor       Floor?       @relation(fields: [floorId], references: [id])
  venue       Venue       @relation(fields: [venueId], references: [id])
}

model Booking {
  id          String       @id @default(uuid())
  userId      String
  venueId     String
  tableId     String
  startTime   DateTime
  endTime     DateTime
  status      BookingStatus @default(PENDING)
  paymentId   String?
  totalPrice  Float
  createdAt   DateTime     @default(now())

  user        User         @relation(fields: [userId], references: [id])
  venue       Venue        @relation(fields: [venueId], references: [id])
  table       Table        @relation(fields: [tableId], references: [id])
  payment     Payment?
  orderItems  OrderItem[]
}

model Payment {
  id            String       @id @default(uuid())
  bookingId     String       @unique  
  provider      String
  transactionId String?
  amount        Float
  status        PaymentStatus @default(PENDING)
  paymentUrl    String?
  paidAt        DateTime?
  createdAt     DateTime      @default(now())

  booking       Booking       @relation(fields: [bookingId], references: [id])
}



model Menu {
  id          String       @id @default(uuid())
  venueId     String
  name        String
  price       Float
  category    String
  isAvailable Boolean      @default(true)
  createdAt   DateTime     @default(now())

  venue       Venue        @relation(fields: [venueId], references: [id])
  orderItems  OrderItem[]
}

model OrderItem {
  id          String       @id @default(uuid())
  bookingId   String
  menuId      String
  quantity    Int
  subtotal    Float

  booking     Booking      @relation(fields: [bookingId], references: [id])
  menu        Menu         @relation(fields: [menuId], references: [id])
}

model LocationTracking {
  id        String    @id @default(uuid())
  userId    String
  latitude  Float
  longitude Float
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id])
}

model Notification {
  id        String    @id @default(uuid())
  userId    String
  title     String
  message   String
  isRead    Boolean   @default(false)
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id])
}
